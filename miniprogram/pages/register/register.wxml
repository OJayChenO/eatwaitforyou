<view class='contain'>
  <!-- 账号 -->
  <view class='b_view'>
    <view class='b_item_nicheng'>
      <text>账号：</text>
    </view>
    <view class='b_item_intput'>
      <input type="text" maxlength='20' placeholder="20个字符以内" bindinput='inputName'></input>
    </view>
  </view>
  <!-- 密码 -->
  <view class='b_view'>
    <view class='b_item_nicheng'>
      <text>密码：</text>
    </view>
    <view class='b_item_intput'>
      <input type="text" maxlength='20' placeholder="20个字符以内" bindinput='inputPassword'></input>
    </view>
  </view>
  <!-- 电话 -->
  <view class='b_view'>
    <view class='b_item_nicheng'>
      <text>电话：</text>
    </view>
    <view class='b_item_intput'>
      <input type="text" maxlength='20' placeholder="20个字符以内" bindinput='inputPhone'></input>
    </view>
  </view>
  <!-- 地址 -->
  <view class='b_view'>
    <view class='b_item_nicheng'>
      <text>地址：</text>
    </view>
    <view class='b_item_intput'>
      <input type="text" maxlength='-1' placeholder="100个字符以内" bindinput='inputAddress'></input>
    </view>
  </view>
</view>
<!-- 注册按钮 -->
<view class="registerBtn">
  <van-button color='#4bbccc' size="large" bindtap='register'>注册</van-button>
</view>